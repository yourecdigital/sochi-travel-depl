# Sochi Travel - Development Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# Database Configuration
# ===========================================
DB_ROOT_PASSWORD=dev_root_password
DB_NAME=sochi_travel_dev
DB_USER=sochi_user
DB_PASSWORD=dev_password
DATABASE_URL=mysql://sochi_user:dev_password@localhost:3306/sochi_travel_dev

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=dev_redis_password
REDIS_URL=redis://:dev_redis_password@localhost:6379/0

# ===========================================
# JWT Secrets (generate secure random strings)
# ===========================================
JWT_SECRET=dev_jwt_secret_key_for_development_only_64_chars_minimum
REFRESH_SECRET=dev_refresh_secret_key_for_development_only_64_chars_minimum

# ===========================================
# MinIO S3 Configuration
# ===========================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=dev_minio_password
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=admin
S3_SECRET_KEY=dev_minio_password
S3_BUCKET=sochi-travel-dev

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
API_VERSION=1.0.0
API_PORT=4000
VITE_API_BASE_URL=http://localhost:4000
VITE_APP_VERSION=1.0.0

# ===========================================
# Domain Configuration
# ===========================================
DOMAIN=localhost
SSL_EMAIL=admin@localhost

# ===========================================
# Monitoring (optional)
# ===========================================
GRAFANA_PASSWORD=dev_grafana_password

# ===========================================
# Build Configuration
# ===========================================
BUILD_TIME=2025-01-01T00:00:00Z
VITE_BUILD_TIME=2025-01-01T00:00:00Z

# ===========================================
# Development Tools
# ===========================================
DEBUG=true
LOG_LEVEL=debug